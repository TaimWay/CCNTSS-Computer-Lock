        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock Width="285" Height="35" FontSize="25" FontWeight="Bold" Grid.Column="1"><Run Text="You croemtpu si lkocd"/></TextBlock>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="55"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" Text="Passwork" VerticalAlignment="Center" Width="55" HorizontalAlignment="Left"/>
            <TextBox x:Name="Passwork" Grid.Column="1" TextWrapping="Wrap" VerticalAlignment="Center" Width="673"/>
